<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@model ChessLandPrj.Models.Comment 

<div class="panel-info">
    <h1 class="h1">
        @ViewData["title"]
    </h1>
    <p class="tagline">
        
        @ViewData["body"]
    </p>  
</div>
<hr/>
<div ng-controller="AboutusController">
    
    <section class="span6">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.Cominfo.CommnenterFullName, new {@class = "col-sm-2"})
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Cominfo.CommnenterFullName, new {@class = "form-control", placeholder = "لطفا نام کامل خود را وارد نمایید", ng_model = "comment.Cominfo.CommnenterFullName"})
                </div>
                <div class="col-sm-4">
                    <span>@Html.ValidationMessageFor(m => m.Cominfo.CommnenterFullName)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Cominfo.CommenterMail, new {@class = "col-sm-2"})
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Cominfo.CommenterMail, new {@class = "form-control e1", placeholder = "لطفا ایمیل خود را وارد نمایید", ng_model = "comment.Cominfo.CommenterMail"})
                </div>
                <div class="col-sm-4">
                    <span>@Html.ValidationMessageFor(m => m.Cominfo.CommenterMail)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ComTitlle, new {@class = "col-sm-2"})
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.ComTitlle, new {@class = "form-control e1", placeholder = "لطفا  عنوان متن ارسالی خود را وارد نمایید", ng_model = "comment.ComTitlle"})
                </div>
                <div class="col-sm-4">
                    <span>@Html.ValidationMessageFor(m => m.ComTitlle)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ComContent, new {@class = "col-sm-2"})
                <div class="col-sm-6">
                    @Html.TextAreaFor(m => m.ComContent, new {@class = "form-control e1", placeholder = " لطفا متن ارسالی خود را وارد نمایید ", ng_model = "comment.ComContent"})
                </div>
                <div class="col-sm-4">
                    <span>@Html.ValidationMessageFor(m => m.ComContent)</span>
                </div>
            </div>

            <br/>

            <div class="control-group">
                <div class="controls">
                    <input type="button" ng-click="sendmessage()" class="btn btn-success" value="ارسال پیغام">
                </div>
            </div>
      
        }
        <div>
            <span id="result"></span>
        </div>
        <br class="clear">
    </section><!-- end left -->
    <section class="span6">
        <div class="well">
            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=new+york+city&amp;aq=&amp;sll=37.6,-95.665&amp;sspn=60.867771,135.263672&amp;t=m&amp;ie=UTF8&amp;hq=&amp;hnear=New+York&amp;z=11&amp;iwloc=A&amp;output=embed"></iframe>
        </div><!--end well -->
    </section><!--end right --> 
</div>

